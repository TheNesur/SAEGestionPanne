{% block page_title %} {% endblock %} 
{% block content %} 
{% set css_style %}
<style>
    * {
        margin: 0;
        padding: 0;
        text-decoration: none;
        list-style: none;
    }

    body {
        font-family: "Poppins";
    }

    header {
        height: 100vh;
        width: 100vw;
        background-color: #ecf0f1;
        padding-top: 20px;
    }

    .navbar {
        position: fixed;
        top: 0;
        width: 100%;
        padding: 30px;
        box-sizing: border-box;
        display: flex;
        justify-content: space-between;
        align-items: center;
        z-index: 1000;
    }

    .navbar a {
        color: #fff;
        font-family: "Archivo Black";
    }

    .navbar .titre {
        font-size: 2em;
        font-weight: bold;
    }

    .navbar .nav-links ul {
        display: flex;
    }

    .navbar .nav-links ul li {
        margin: 0 25px;
        font-size: 20px;
    }



    .navbar .menu-navbar {
        display: none;
        position: absolute;
        top: 45px;
        right: 50px;
        width: 35px;
    }

    .navbar .nav-links ul li a:hover {
        color: #ed3c57;
        font-weight: bold;
    }

    h1 {
        color: black;
        font-family: "Bebas Neue";
        background: linear-gradient(to right, #ffffff, #bdc3c7);
            
            padding: 30px 40px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
            font-size: 28px;
            text-align: center;
    }

    .principal_container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 100%;
    }

    .grid-container {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        grid-gap: 20px;
        align-items: center;
        justify-content: center;
        margin-top: 5%;
    }

    .section {
        color: black;
        padding: 20px;
        margin: 45px;
        border: solid white 5px;
        border-radius: 10px;
        box-shadow: 0 0 30px rgba(0, 0, 0, 0.5);
        text-align: center;
        transition: background-color 0.3s;
    }

    .section:hover {
        background-color: #6c7ae0;
    }

    .section h2 {
        font-size: 24px;
        margin-bottom: 10px;
    }

    .section p {
        line-height: 1.6;
        color: black;
    }

    .section img {
        width: 40%;
        margin-bottom: 10px;
    }

    .section a {
        color: black;
        display: block;
        text-align: center;
        margin-top: 10px;
        text-decoration: none;
        font-weight: bold;
    }

    p {
        color: black;
        font-size: 15px;
    }

    footer {
        color: #fff;
        text-align: center;
        padding: 10px;
        position: fixed;
        bottom: 0;
        width: 100%;
    }

    .navbar,
    footer {
        background-color: #333;
    }

    @media screen and (max-width: 900px) {
        .navbar {
            padding: 20px;
            border-bottom: 4px solid black;
        }

        .navbar .titre {
            position: relative;
            top: auto;
            left: auto;
        }

        .navbar .menu-navbar {
            display: block;
            margin-top: -2%;
        }

        .nav-links {
            top: 0;
            left: 0;
            position: absolute;
            background-color: rgba(255, 255, 255, 0.2);
            backdrop-filter: blur(7px);
            width: 100%;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            margin-left: -100%;
            transition: all 0.5s ease;
        }

        .nav-links.menu-mobile {
            margin-left: 0;
        }

        .nav-links ul {
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .navbar .nav-links ul li {
            margin: 25px 0px;
            font-size: 1.2em;
        }

        .navbar .nav-links ul li a {
            color: black;
        }
    }

    @media screen and (max-width: 620px) {
        header {
            height: 150vh;
            width: 100vw;
            background-color: #ecf0f1;
            padding-top: 20px;
        }

        .navbar .menu-navbar {
            display: block;
            margin-top: -3%;
        }
       
    }

    @media screen and (max-width: 400px) {
        header {
            height: 200vh;
            width: 100vw;
            background-color: #ecf0f1;
            padding-top: 20px;
        }

        .navbar .menu-navbar {
            display: block;
            margin-top: -4%;
        }
    }
</style>
{% endset %}
